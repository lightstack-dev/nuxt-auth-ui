{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "@nuxt/ui",
      "@types/node"
    ],
    "paths": {
      "#imports": ["./src/runtime/composables"]
    },
    "lib": ["ESNext", "DOM"]
  },
  "exclude": [
    "dist",
    "node_modules",
    ".nuxt",
    "playground",
    "docs",
    "test"
  ]
}